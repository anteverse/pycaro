#!/usr/bin/env python3
from typing import Tuple

import click

from pycaro import ModuleChecker
from pycaro.render import StdoutSummary


@click.group("pycaro")
def pycaro():
    pass


@pycaro.command("test")
def test():
    click.echo("Pycaro ready")


@pycaro.command("check")
@click.argument(
    "src",
    nargs=-1,
    # type=click.Path(
    #     exists=True, file_okay=True, dir_okay=True, readable=True, allow_dash=True
    # ),
    type=str,
    is_eager=True,
    metavar="SRC ...",
)
def check(src: Tuple[str, ...]):

    prepared_writer = StdoutSummary()

    for line in prepared_writer.render(
        entries=(ModuleChecker(s).as_unstable_module for s in src)
    ):
        print(line)


if __name__ == "__main__":
    pycaro()
